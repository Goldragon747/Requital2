<UserControl x:Class="Requital.UserControls.CombatMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Requital.UserControls"
             mc:Ignorable="d">

    <WrapPanel x:Name="Options" Background="LimeGreen">
        <Button x:Name="Attack" Content="Attack"
                Width="250"
                FontSize="24"/>
        <Button x:Name="Magic" Content="Magic"
                Width="250"
                FontSize="24"
                FontStyle="Italic"/>
        <Button x:Name="Defend" Content="Defend"
                Width="250"
                FontSize="24"
                FontWeight="Heavy"/>
        <Button x:Name="Flee" Content="Flee"
                Width="250"
                FontSize="24" 
                FontStyle="Oblique"/>
    </WrapPanel>
</UserControl>
